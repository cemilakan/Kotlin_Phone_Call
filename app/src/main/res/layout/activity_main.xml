<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cemil.kotlin_phone_call.MainActivity">

    <EditText
        android:id="@+id/telefonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:ems="10"
        android:hint="Telefon"
        android:inputType="phone" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/phoneButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:onClick="phoneCall_Direk"
        android:text="Direk Arama" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/phoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/telefonText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:onClick="phoneCall"
        android:text="Rehberden Ara"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="190dp" />

</RelativeLayout>
